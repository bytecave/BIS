Global wndAbout

Global btnContent, txtAboutLabel, btnClose, edtAbout, chkTray, chkStartup

Enumeration FormFont
  #Font_wndAbout_0
  #Font_wndAbout_1
EndEnumeration

LoadFont(#Font_wndAbout_0,"Consolas", 14, #PB_Font_Bold)
LoadFont(#Font_wndAbout_1,"Consolas", 12)

Declare CloseAboutBox(EventType)
Declare SetMinToTray(EventType)
Declare DisplayContent(EventType)
Declare SetRunAtLogin(EventType)

Procedure OpenwndAbout(x = 0, y = 0, width = 600, height = 350)
  wndAbout = OpenWindow(#PB_Any, x, y, width, height, "ByteCave Image Server Settings", #PB_Window_SystemMenu | #PB_Window_TitleBar | #PB_Window_WindowCentered)
  SetWindowColor(wndAbout, RGB(220,220,220))
  btnContent = ButtonGadget(#PB_Any, 310, 258, 270, 25, "Display license or about text")
  txtAboutLabel = TextGadget(#PB_Any, 20, 10, 280, 20, "About ByteCave Image Server")
  SetGadgetColor(txtAboutLabel, #PB_Gadget_BackColor,RGB(220,220,220))
  SetGadgetFont(txtAboutLabel, FontID(#Font_wndAbout_0))
  btnClose = ButtonGadget(#PB_Any, 480, 315, 100, 25, "Close")
  edtAbout = EditorGadget(#PB_Any, 20, 30, 560, 230, #PB_Editor_ReadOnly | #PB_Editor_WordWrap)
  SetGadgetColor(edtAbout, #PB_Gadget_BackColor,RGB(250,250,250))
  chkTray = CheckBoxGadget(#PB_Any, 20, 280, 180, 25, "Minimize to tray")
  GadgetToolTip(chkTray, "Minimize to system tray area instead of taskbar")
  SetGadgetFont(chkTray, FontID(#Font_wndAbout_1))
  chkStartup = CheckBoxGadget(#PB_Any, 20, 310, 180, 25, "Run at user login")
  GadgetToolTip(chkStartup, "Run when user account logs in")
  SetGadgetFont(chkStartup, FontID(#Font_wndAbout_1))
EndProcedure

Procedure wndAbout_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case btnContent
          DisplayContent(EventType())          
        Case btnClose
          CloseAboutBox(EventType())          
        Case chkTray
          SetMinToTray(EventType())          
        Case chkStartup
          SetRunAtLogin(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure



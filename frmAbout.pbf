Global wndAbout

Global btnContent, txtAboutLabel, imgAboutLogo, btnClose, edtAbout

Global Img_wndAbout_0

UsePNGImageDecoder()

Img_wndAbout_0 = LoadImage(#PB_Any,"resources\minilogo.png")

Enumeration FormFont
  #Font_wndAbout_0
EndEnumeration

LoadFont(#Font_wndAbout_0,"Consolas", 24, #PB_Font_Bold)

Declare CloseAboutBox(EventType)
Declare DisplayContent(EventType)

Procedure OpenwndAbout(x = 0, y = 0, width = 600, height = 350)
  wndAbout = OpenWindow(#PB_Any, x, y, width, height, "About ByteCave Image Server", #PB_Window_SystemMenu | #PB_Window_TitleBar | #PB_Window_WindowCentered)
  SetWindowColor(wndAbout, RGB(220,220,220))
  btnContent = ButtonGadget(#PB_Any, 20, 315, 270, 25, "Display license or about text")
  txtAboutLabel = TextGadget(#PB_Any, 10, 10, 500, 40, "About ByteCave Image Server")
  SetGadgetColor(txtAboutLabel, #PB_Gadget_BackColor,RGB(220,220,220))
  SetGadgetFont(txtAboutLabel, FontID(#Font_wndAbout_0))
  imgAboutLogo = ImageGadget(#PB_Any, 520, 10, 70, 40, ImageID(Img_wndAbout_0))
  btnClose = ButtonGadget(#PB_Any, 480, 315, 100, 25, "Close")
  edtAbout = EditorGadget(#PB_Any, 20, 70, 560, 240, #PB_Editor_ReadOnly | #PB_Editor_WordWrap)
  SetGadgetColor(edtAbout, #PB_Gadget_BackColor,RGB(250,250,250))
EndProcedure

Procedure wndAbout_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case btnContent
          DisplayContent(EventType())          
        Case btnClose
          CloseAboutBox(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure



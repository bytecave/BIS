Global wndClientConfig

Global ipClientAddress, lblDefaultFolder, btnImagesPath, btnSetClient, btnRemoveClient, ImgFolder, edtConfigImagesPath

Global Img_wndClientConfig_0

UsePNGImageDecoder()

Img_wndClientConfig_0 = LoadImage(#PB_Any,"resources\selectfolder.png")

Enumeration FormFont
  #Font_wndClientConfig_0
  #Font_wndClientConfig_1
EndEnumeration

LoadFont(#Font_wndClientConfig_0,"Consolas", 12, #PB_Font_Bold)
LoadFont(#Font_wndClientConfig_1,"Consolas", 12)

Declare GetImagesPath(EventType)
Declare SetClientConfig(EventType)
Declare RemoveClientConfig(EventType)

Procedure OpenwndClientConfig(x = 0, y = 0, width = 440, height = 200)
  wndClientConfig = OpenWindow(#PB_Any, x, y, width, height, "Configure Client Connection", #PB_Window_SystemMenu | #PB_Window_TitleBar | #PB_Window_WindowCentered, WindowID(wndMain))
  ipClientAddress = IPAddressGadget(#PB_Any, 10, 10, 120, 25)
  lblDefaultFolder = TextGadget(#PB_Any, 10, 0, 140, 20, "Default Folder")
  SetGadgetColor(lblDefaultFolder, #PB_Gadget_FrontColor,RGB(0,128,255))
  SetGadgetFont(lblDefaultFolder, FontID(#Font_wndClientConfig_0))
  btnImagesPath = ButtonGadget(#PB_Any, 160, 10, 270, 25, "Select folder for images ...")
  SetGadgetFont(btnImagesPath, FontID(#Font_wndClientConfig_1))
  btnSetClient = ButtonGadget(#PB_Any, 340, 170, 80, 25, "Set")
  SetGadgetFont(btnSetClient, FontID(#Font_wndClientConfig_1))
  btnRemoveClient = ButtonGadget(#PB_Any, 160, 170, 130, 25, "Remove Client")
  SetGadgetFont(btnRemoveClient, FontID(#Font_wndClientConfig_1))
  ImgFolder = ImageGadget(#PB_Any, 15, 60, 120, 120, ImageID(Img_wndClientConfig_0))
  edtConfigImagesPath = EditorGadget(#PB_Any, 160, 40, 270, 110, #PB_Editor_ReadOnly | #PB_Editor_WordWrap)
  SetGadgetColor(edtConfigImagesPath, #PB_Gadget_BackColor,RGB(242,242,242))
EndProcedure

Procedure wndClientConfig_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case btnImagesPath
          GetImagesPath(EventType())          
        Case btnSetClient
          SetClientConfig(EventType())          
        Case btnRemoveClient
          RemoveClientConfig(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure


